<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/macro_selector_width"
    android:layout_height="@dimen/macro_selector_height">

    <TextView
        android:id="@+id/macro_selector_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/spacer_margin"
        android:text="@string/macro_selector_label"
        android:textSize="@dimen/radio_text_size"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/macro_selector_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/macro_selector_label"
        android:layout_marginTop="@dimen/spacer_margin"
        android:layout_centerHorizontal="true" />

</RelativeLayout>